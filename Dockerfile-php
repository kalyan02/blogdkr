FROM php:8.2-fpm-alpine

# Install system dependencies and common packages
RUN apk update && \
    apk add --no-cache \
        curl \
        wget \
        git \
        zip \
        unzip \
        sqlite \
        mysql-client \
        postgresql-client \
        imagemagick \
        ghostscript \
        nano \
        vim \
        htop \
        && rm -rf /var/cache/apk/*

# Install PHP extensions from packages (no compilation)
RUN apk add --no-cache \
        php82-gd \
        php82-zip \
        php82-intl \
        php82-mbstring \
        php82-xml \
        php82-pdo \
        php82-pdo_mysql \
        php82-pdo_sqlite \
        php82-pdo_pgsql \
        php82-mysqli \
        php82-curl \
        php82-fileinfo \
        php82-bcmath \
        php82-exif \
        php82-opcache \
        php82-session \
        php82-tokenizer \
        php82-json

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www

# Expose port 9000 for PHP-FPM
EXPOSE 9000

CMD ["php-fpm"]